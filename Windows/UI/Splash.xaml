<Window x:Class="Simple_YTDLP.Windows.UI.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_YTDLP.Windows.UI"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        Background="Black"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Simple-YTDLP - NeoCircuit-Studios" Height="600" Width="1090">
    <Grid>
        <Grid Background="Black">
            <Image x:Name="Background" Width="1090" Height="600" Stretch="Fill" 
               VerticalAlignment="Center" Opacity="0" HorizontalAlignment="Center" Visibility="Visible" />


            <TextBlock x:Name="APPTitle" Text="Simple-YTDLP"
                   FontSize="80" Opacity="0" FontWeight="Bold" Foreground="Black"
                   VerticalAlignment="Top" HorizontalAlignment="Center"
                   Margin="0,10,0,0" Visibility="Collapsed"/>


            <TextBlock x:Name="loadingText" Opacity="0" Text="Laden..."
                       FontSize="25" FontWeight="Bold" Foreground="Black"
                       VerticalAlignment="Bottom" HorizontalAlignment="Right"
                       Margin="0,0,48,10"/>


            <TextBlock x:Name="version" Opacity="0" Text="0.0.0.0" Foreground="Black"
                            FontSize="20" FontWeight="Bold"
                            VerticalAlignment="Bottom" HorizontalAlignment="Left"
                            Margin="15,0,0,0" RenderTransformOrigin="0.522,0.008"/>

            <TextBlock x:Name="NS" Text="Copyright © NeoCircuit-Studios 2025" Foreground="Black"
                            FontSize="20"  Opacity="0" FontWeight="Bold"
                            VerticalAlignment="Top" HorizontalAlignment="Center"
                            Margin="0,527,0,0" RenderTransformOrigin="0.522,0.008"/>



            <Canvas Width="100" Height="100" x:Name="LoadingIcon" Visibility="Collapsed" Opacity="0">
                <Ellipse Width="40" Height="40"
         Stroke="LightBlue" StrokeThickness="6"
         StrokeDashArray="2,3"
         RenderTransformOrigin="0.5,0.5" Canvas.Left="544" Canvas.Top="279" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="SpinnerRotate" />
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                 Storyboard.TargetProperty="Angle"
                                 From="0" To="360"
                                 Duration="0:0:1"
                                 RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </Canvas>
        </Grid>

    </Grid>
</Window>
