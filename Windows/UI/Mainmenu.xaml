<UserControl x:Class="Simple_YTDLP.Windows.UI.Mainmenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simple_YTDLP.Windows.UI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1090">
    <Grid>
        <Image x:Name="Background" Width="1090" Height="600" Stretch="Fill" 
               VerticalAlignment="Center"  Opacity="1" Source="/Core/APP/sys/mainmenu.png"  HorizontalAlignment="Center" Visibility="Visible" />

        <TextBlock x:Name="InstallingText" Text="Tools Installeren.."
                   FontSize="80" Opacity="0" FontWeight="Bold" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed" Height="118" Width="622" RenderTransformOrigin="0.5,0.5" Margin="260,236,0,0">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-11.31"/>
                    <RotateTransform/>
                    <TranslateTransform X="-11.8"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>

        <ProgressBar x:Name="ProgressBar" Width="300" Height="25"
             Margin="0,527,0,0"
             HorizontalAlignment="Center"
             Opacity="0"
             VerticalAlignment="Top"
             Visibility="Collapsed"
             Minimum="0" Maximum="100"
             Value="0" />


        <TextBlock x:Name="infoText" Text="Download een YT Playlist naar MP3:"
                   FontSize="50" Opacity="0" FontWeight="Bold" Foreground="White"
                   VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Collapsed" Height="84" Width="902" RenderTransformOrigin="0.5,0.5" Margin="0,178,0,0">
        </TextBlock>


        <TextBox x:Name="YTLinkTextBox" Width="338" Height="30" 
                 Visibility="Collapsed" Opacity="0" Margin="0,334,0,0" Text="Public Youtube of Youtube Music link 'https://youtu.be/xvF'"  HorizontalAlignment="Center"
                 VerticalAlignment="Top" Background="LightCyan" GotFocus="YTLinkTextBox_GotFocus" FontSize="15" LostFocus="YTLinkTextBox_LostFocus"/>

        <Button x:Name="okBUt" Opacity="0" Visibility="Collapsed" FontSize="20" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Okbut_Click" Margin="0,406,0,0" Width="110" Height="30"></Button>





        <TextBlock x:Name="downloadingTEXR" Text="Downloading Playlist.."
                   FontSize="60" Opacity="0" FontWeight="Bold" Foreground="Blue"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Collapsed" Height="84" Width="690" RenderTransformOrigin="0.5,0.5" Margin="50,135,0,0">
        </TextBlock>

        <TextBox x:Name="LogTextBox"
         Foreground="Blue"
         IsReadOnly="True"
         Background="Aqua"
         VerticalScrollBarVisibility="Auto"
         HorizontalScrollBarVisibility="Auto"
         TextWrapping="Wrap"
         AcceptsReturn="True"
         Opacity="0"
         Visibility="Collapsed"
         VerticalAlignment="Center"
         HorizontalAlignment="Left"
         Width="345"
         Height="178"
         Margin="745,0,0,0" />


        <Button x:Name="thxBUt" Opacity="0" Visibility="Collapsed" FontSize="20" Content="Done" HorizontalAlignment="Left" VerticalAlignment="Top" Click="THXbut_Click" Margin="232,365,0,0" Width="230" Height="30"></Button>
        <Button x:Name="openfolderBUT" Opacity="0" Visibility="Collapsed" FontSize="20" Content="De Map Openen" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Folderopen_Click" Margin="280,0,0,96" Height="66" Width="172"></Button>


        <Canvas Width="100" Height="100" x:Name="LoadingIcon" Visibility="Collapsed" Opacity="0">
            <Ellipse Width="40" Height="40"
         Stroke="LightBlue" StrokeThickness="6"
         StrokeDashArray="2,3"
         RenderTransformOrigin="0.5,0.5" Canvas.Left="544" Canvas.Top="279" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Ellipse.RenderTransform>
                    <RotateTransform x:Name="SpinnerRotate" />
                </Ellipse.RenderTransform>
                <Ellipse.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                 Storyboard.TargetProperty="Angle"
                                 From="0" To="360"
                                 Duration="0:0:1"
                                 RepeatBehavior="Forever"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Ellipse.Triggers>
            </Ellipse>
        </Canvas>

    </Grid>
</UserControl>
