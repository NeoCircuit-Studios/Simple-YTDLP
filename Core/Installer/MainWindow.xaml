<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        Background="AliceBlue"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Simple-YTDLP Installer - NeoCircuit-Studios 2025" Height="200" Width="314">
    <Grid>

        <TextBlock x:Name="infoTeXT" Visibility="Visible" Opacity="1" Text="Simple-YTDLP:" FontSize="25"  Background="AliceBlue" Margin="78,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-8.603"/>
                    <RotateTransform/>
                    <TranslateTransform X="-2.515"/>
                </TransformGroup>
            </TextBlock.RenderTransform></TextBlock>

        <Button x:Name="InstallBUT" Visibility="Visible" Opacity="1" Content="Install" FontSize="20" Background="#FFB0C4DE" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="29" Click="InstallBUT_Click"/>

    </Grid>
</Window>
