<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        Background="AliceBlue"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Title="Simple-YTDLP Installer - NeoCircuit-Studios 2025" Height="200" Width="314">
    
    <Grid>

        <Image x:Name="Background" Width="1090" Height="600" Stretch="None" 
               VerticalAlignment="Center" Source="/Core/APP/image/IMG_2676.PNG" Opacity="1"  HorizontalAlignment="Center" Visibility="Visible" />

        <TextBlock x:Name="infoTeXT" Visibility="Visible" Opacity="1" Foreground="White" Text="Simple-YTDLP:" Background="Transparent"  FontSize="25" Margin="78,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-8.603"/>
                    <RotateTransform/>
                    <TranslateTransform X="-2.515"/>
                </TransformGroup>
            </TextBlock.RenderTransform></TextBlock>

        <Button x:Name="InstallBUT" Visibility="Visible" Opacity="1" Content="Installeren" FontSize="20" Background="#FFB0C4DE" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="106" Height="29" Click="InstallBUT_Click"/>
        <Button x:Name="openBUT" Background="#FFB0C4DE" Visibility="Collapsed" Opacity="1" Content="Open" FontSize="20"  Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="29" Click="openBUT_Click"/>

        <TextBlock x:Name="statusTEXT" Visibility="Collapsed" Opacity="1" Text="Installeren..." Foreground="White" Margin="0,104,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" TextWrapping="Wrap" TextAlignment="Center" Width="154"/>

        <ProgressBar x:Name="progress" Visibility="Collapsed" Background="White" Value="0" Maximum="100" Minimum="0" Height="20" Margin="0,134,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" />
        <TextBlock x:Name="logoTEXT" Visibility="Visible" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="10" Foreground="White" TextWrapping="Wrap" TextAlignment="Center" Width="134" Text="NeoCircuit-Studios 2025"/>
        
    </Grid>
</Window>
